{
  "exclude": [
      "./tests",
      "./node-modules",
      "./dist"
  ],
  "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noImplicitReturns": true,
      "sourceMap": true,
      "strictPropertyInitialization": true

  }
}
